{% extends 'partials/layout.njk' %}
{% block content %}
    <h1>Home Page</h1>
    <div class="row">
        {% for movie in movies %}
            <div class="col-3 mb-3">
                <div class="card h-100">
                    <img src="{{ movie.image }}" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">{{ movie.name }}</h5>
                        <p class="card-text">{{ movie.snippet }}</p>
                        <p class="card-text text-secondary">{{ movie.createdAt.toRelative() }}</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}