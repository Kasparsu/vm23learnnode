{% extends 'partials/layout.njk' %}
{% block content %}
    <h1>Movies</h1>
    <a href="/movies/create" class="btn btn-primary">Add Movie</a>
    <table class="table table-striped table-hover">
        <thead>
            <th>ID</th>
            <th>Name</th>
            <th>Length</th>
            <th>Actions</th>
        </thead>
        <tbody>
            {% for movie in movies %}
                <tr>
                    <td>{{ movie.id }}</td>
                    <td>{{ movie.name }}</td>
                    <td>{{ movie.length }}</td>
                    <td>
                        <div class="btn-group">
                            <a href="/movies/view?id={{ movie.id }}" class="btn btn-info">View</a>
                            <a href="/movies/edit?id={{ movie.id }}" class="btn btn-warning">Edit</a>
                            <a href="/movies/delete?id={{ movie.id }}" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}