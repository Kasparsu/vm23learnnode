{% extends 'partials/layout.njk' %}
{% block content %}
<form action="/movies/edit?id={{ movie.id }}" method="POST">
    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" value="{{ movie.name }}" name="name" class="form-control" id="name" placeholder="Movie name">
    </div>
    <div class="mb-3">
        <label for="length" class="form-label">Length</label>
        <input type="number" value="{{ movie.length }}" name="length" class="form-control" id="length" placeholder="Movie length">
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea class="form-control"
            name="description"
            id="description"
            rows="12">{{ movie.description }}</textarea>
    </div>
    <input type="submit" class="btn btn-primary" value="Create">
</form>
{% endblock %}