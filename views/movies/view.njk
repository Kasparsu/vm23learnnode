{% extends 'partials/layout.njk' %}
{% block content %}
<a href="/movies" class="btn btn-primary">Back</a>

<table class="table table-striped table-hover mt-3">
    <tbody>
        <tr>
            <th>ID</th>
            <td>{{ movie.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ movie.name }}</td>
        </tr>
        <tr>
            <th>Length</th>
            <td>{{ movie.length }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ movie.description }}</td>
        </tr>
    </tbody>
</table>
{% endblock %}